{
  "compilerOptions": {
    "target": "esnext",
    "module": "esNext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"],
      "@/*": ["./imports/*"],
      "@api/*": ["./imports/api/*"],
      "@ui/*": ["./imports/ui/*"],
      "@lib/*": ["./imports/lib/*"],
      "@server/*": ["./imports/server/*"]
    },
    "types": ["meteor", "node", "mocha"]
  },
  "include": [
    "imports/**/*",
    "client/**/*",
    "server/**/*",
    "tests/**/*",
    "imports/types/meteor.d.ts",
    "imports/types/meteor-mdg-validated-method.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".meteor",
    "public",
    "eslint.config.cjs"
  ]
}
