{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"settings": {
		"react": {
			"version": "latest"
		}
	},
	"extends": [
		"eslint:recommended", 
		"plugin:react/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [ "error", "tab" ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"no-unused-vars": [ "error", {
				"vars": "all",
				"args": "none"
		}],
		"space-infix-ops": [ "error" ],
		"object-curly-spacing": [ "error", "always", { 
			"objectsInObjects": false 
		}],
		"react/boolean-prop-naming": [ "error" ],
		"react/no-typos": [ "error" ]
	}
}